@model ksc.Models.ActivityWinner

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Event's Users</h2>
<div class="w3l-table-info">
    <table id="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Options</th>
                <th>Mark Winner</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ActivityUsers)
             {
            <tr>
                <td>@item.User.name</td>
                @if (@item.status == 0)
                {
                    <td>@Html.ActionLink("Approve", "Approve", new { id = item.id })</td>
                }else
                {
                    <td>@Html.ActionLink("DisApprove", "DisApprove", new { id = item.id })</td>
                }

                <td>@Html.ActionLink("Mark Winner", "MarkWinner", new { userId = item.user_id, activityId = item.activity_id })</td>
            </tr>
             }
        </tbody>
    </table>
</div>